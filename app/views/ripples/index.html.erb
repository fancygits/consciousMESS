<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Message</th>
      <th>Posted</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ripples.each do |ripple| %>
      <tr>
        <td>
          <%= link_to_if(ripple.url.present?, ripple.name, 
                        ripple.url, 
                        :target => "_blank") %>
        </td>
        <td><%=h truncate(ripple.message, :length => 75) %></td>
        <td><%= ripple.created_at %></td>
        <td><%= link_to 'Show', ripple %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p> You are on page <%= @page_num %>.</p>

<nav>
  <%= link_to 'Newest', ripples_path %> | 
  <%= link_to 'Previous 10 Ripples', ripples_path(page: @page_num - 1) %> | 
  <%= link_to 'Next 10 Ripples', ripples_path(page: @page_num + 1) %> | 
  <%= link_to 'Oldest', ripples_path(page: 10) %>
  <%= link_to 'New Ripple', new_ripple_path %>
</nav>